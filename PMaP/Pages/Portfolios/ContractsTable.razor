                                <span class="fa @(GetContractsSortStyle("UnpaidInstalments"))"></span>
                            </th>
                            <th>
                                <span class="sort-link" @onclick="@(() => SortContractsTable("OutstandingInstalments"))">Outstanding instalments</span>
                                <span class="fa @(GetContractsSortStyle("OutstandingInstalments"))"></span>
                            </th>
                            <th>
                                <span class="sort-link" @onclick="@(() => SortContractsTable("AccountingSituation"))">Accounting situation</span>
                                <span class="fa @(GetContractsSortStyle("AccountingSituation"))"></span>
                            </th>
                            <th>
                                <span class="sort-link" @onclick="@(() => SortContractsTable("LtvOriginal"))">LTV original</span>
                                <span class="fa @(GetContractsSortStyle("LtvOriginal"))"></span>
                            </th>
                            <th>
                                <span class="sort-link" @onclick="@(() => SortContractsTable("Syndicated"))">Syndicated</span>
                                <span class="fa @(GetContractsSortStyle("Syndicated"))"></span>
                            </th>
